<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activity.HelpActivity"
        android:background="@drawable/background">

    <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/dialog_background"
            tools:ignore="MissingConstraints"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="45sp"
                android:layout_marginTop="5dp"
                android:text="@string/help"
                style="@font/samsungone800c"/>

        <TextView
                android:id="@+id/help_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"

                style="@font/samsungone800c"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

            <ImageView
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/git_white"
                    android:id="@+id/openGithubButton"
                    android:translationX="33dp"
                    android:importantForAccessibility="no"
            />

            <ImageView
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/rustore"
                    android:id="@+id/openRuStoreButton"
                    android:translationX="43dp"
                    android:importantForAccessibility="no"
            />

            <Button
                    android:id="@+id/backButton"
                    android:text="@string/back"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:backgroundTint="@color/dark_blue"
                    android:translationX="53dp"

                    android:textColor="@color/white"
                    android:textSize="22sp"
            />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>