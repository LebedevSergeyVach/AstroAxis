<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TheoryActivity"
        android:background="@drawable/backaround">

    <ScrollView
            app:layout_constraintEnd_toStartOf="@+id/openGLinkGuideButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintBottom_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="120dp"
                    android:layout_marginBottom="100dp"
                    android:textSize="54sp"
                    style="@font/samsungone700c"
                    android:text="@string/theory_of_astronomy">
            </TextView>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/rounded_corner">

                <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp">
                </TableLayout>
            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textSize="40sp"
                    style="@font/samsungone800c"
                    android:text="@string/schematic_representation_of_the_celestial_sphere">
            </TextView>

            <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/schematic_representation_of_the_celestial_sphere"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/schematic_representation_of_the_celestial_sphere"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="25sp"
                    style="@font/samsungone800c"
                    android:text="@string/description_schematic_representation_of_the_celestial_sphere"
                    android:background="@drawable/rounded_corner">
            </TextView>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textSize="40sp"
                    style="@font/samsungone800c"
                    android:text="@string/horizontal_coordinate_system">
            </TextView>

            <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/horizontal_coordinate_system"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/horizontal_coordinate_system"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="25sp"
                    style="@font/samsungone800c"
                    android:text="@string/description_horizontal_coordinate_system"
                    android:background="@drawable/rounded_corner">
            </TextView>
        </LinearLayout>

    </ScrollView>

    <Button
            android:layout_width="170dp"
            android:layout_height="80dp"

            android:id="@+id/openGLinkGuideButton"
            android:backgroundTint="@color/dark_blue"

            style="@font/samsungone800c"
            android:text="@string/guide"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintVertical_bias="0.679"/>

    <Button
            android:layout_width="170dp"
            android:layout_height="80dp"

            android:id="@+id/exitButton"
            android:backgroundTint="@color/dark_blue"

            style="@font/samsungone800c"
            android:text="@string/back"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.971"
            app:layout_constraintVertical_bias="0.951"/>

</androidx.constraintlayout.widget.ConstraintLayout>