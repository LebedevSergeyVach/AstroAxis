<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:colorBackground">@color/ic_background_color</item>
    </style>

    <style name="SamsungOne500C">
        <item name="android:fontFamily">@font/samsungone500c</item>
    </style>

    <style name="SamsungOne600C">
        <item name="android:fontFamily">@font/samsungone600c</item>
    </style>

    <style name="SamsungOne700C">
        <item name="android:fontFamily">@font/samsungone700c</item>
    </style>

    <style name="SamsungOne800C">
        <item name="android:fontFamily">@font/samsungone800c</item>
    </style>

    <style name="AstroTheme" parent="Base.Theme.AstroAxis">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">#293133</item> <!-- Этот цвет будет определять степень затемнения -->
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CustomProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:indeterminateTint">@color/dark_blue</item> <!-- Здесь указывается цвет спиннера -->
        <item name="android:windowBackground">@drawable/dialog_background</item> <!-- Здесь указывается ваш кастомный фон -->
    </style>
</resources>
